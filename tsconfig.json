{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "types": ["node", "jest"],
      "typeRoots": ["./node_modules/@types", "./src"],
      "outDir": "dist/",
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "src/tests/**/*",
      "*"
    ],
    "exclude": [
      "node_modules"
    ]
}